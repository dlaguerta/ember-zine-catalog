<div class="listing">
<article class="listing-cell">
  <h6>{{#link-to "zines.show" zine}}{{zine.title}} <span>{{zine.sub_title}}</span>{{/link-to}}</h6>
  <ul class="zine-metadata">
      <div class="photo-placeholder">
        Zine Cover
      </div>
      <li><b>Creator: </b> {{zine.creator}}</li>
      <li><b>Subject/Genre: </b> {{zine.subject_genre}}</li>
      <li><b>Content tags: </b>  {{zine.tags}}</li>
      <li>Libraries: {{#link-to "libraries.show" zine.library_ids}}{{zine.libraries}}
      {{/link-to}}
      </li>
  </ul>
  </article>
</div>
{{yield}}
