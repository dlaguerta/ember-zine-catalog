<h2> Current Zine Catalog</h2>
<p> Start a quick search by title in the search bar below! </p>

{{#each pagedContent as |zines|}}
{{! your app's display logic}}

  {{#list-filter
  filter=(action 'filterByTags')
  as |zines|}}
  <ul class="results row small-up-1 medium-up-2 large-up-3">
    {{#each zines as |content|}}
    <li class="column">{{zine-listing zine=content}}</li>
    {{/each}}
  </ul>
  {{/list-filter}}

{{/each}}

  {{page-numbers content=content.zines}}
  {{outlet}}
